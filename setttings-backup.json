            "enumMember": "#95e6cb",
            "event": "#f29668",
            "function": "#00ff00",
            "method": "#00cc00",
            "macro": "#e6c08a",
            "comment": "#fff",
            "string": "#5555cc",
            "stringLiteral": "#5555cc",
            "keyword": "#ff8f40",
            "number": "#ff0000",
            "variable.local": "#ccc",
            "regexp": "#95e6cb",
            // "operator": "#ff0000",
            "parameter": "#fff",
            "property": "#ccc",

            "newOperator": "#ccc",
        },
    },
